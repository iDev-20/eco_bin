void showAlert(BuildContext context, String title, String desc) {
    Alert(
      context: context,
      title: title,
      desc: desc,
      buttons: [
        DialogButton(
          onPressed: () {
            Navigator.pop(context);
          },
          width: 200,
          color: Colors.blueGrey.shade900,
          child: const Text(
            'Try again',
            style: TextStyle(
                color: Colors.white,
                fontSize: 20),
          ),
        ),
      ],
    ).show();
  }